//Simple Two Numbers Calculator
import java.util.Scanner;
public class Main { 
public static void main(String[] args){
    Scanner input = new Scanner(System.in);
    System.out.println("****Simple Two Numbers Calculator****");
    System.out.print("Enter the first number : ");
    int fnum = input.nextInt();
    System.out.print("Enter the second number : ");
    int snum = input.nextInt();
     System.out.println("1 - Addition");
     System.out.println("2 - Subtraction");
     System.out.println("3 - Multiplication");
     System.out.println("4 - Division");
     System.out.print("Enter your choice in number : ");
     int data = input.nextInt();
    switch(data){
        case 1:
            int res = fnum+snum;
            System.out.print("Answer : "+res);
            break;
            case 2:
            int resu = fnum-snum;
            System.out.print("Answer : "+resu);
            break;
            case 3:
            int resul = fnum*snum;
            System.out.print("Answer : "+resul);
            break;
            case 4:
            int result = fnum/snum;
            System.out.print("Answer : "+result);
            break;
        default:
        System.out.println("Invalid Data");
    }
}
}
